{
	"name": "pl_copy_activity",
	"properties": {
		"description": "create pipeline for copy data simply \nfrom .txt format to.txt  format.\n",
		"activities": [
			{
				"name": "Copy data1",
				"description": "copy simple data from one location to another",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "BinarySource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"deleteFilesAfterCompletion": false
						},
						"formatSettings": {
							"type": "BinaryReadSettings"
						}
					},
					"sink": {
						"type": "BinarySink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings",
							"copyBehavior": "PreserveHierarchy"
						}
					},
					"enableStaging": false
				}
			}
		],
		"variables": {
			"new_lst": {
				"type": "Array"
			},
			"marks": {
				"type": "Array",
				"defaultValue": [
					10,
					2001,
					22005,
					200
				]
			},
			"markes ": {
				"type": "Array"
			}
		},
		"folder": {
			"name": "basic_activity"
		},
		"annotations": []
	}
}